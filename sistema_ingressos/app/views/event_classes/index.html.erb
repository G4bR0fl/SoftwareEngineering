<p id="notice"><%= notice %></p>
<h1>Event Classes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_classes.each do |event_class| %>
      <tr>
        <td><%= event_class.description %></td>
        <td><%= link_to 'Show', event_class %></td>
        <% if current_user.admin == true %>  
          <td><%= link_to 'Edit', edit_event_class_path(event_class) %></td>
          <td><%= link_to 'Destroy', event_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Class', new_event_class_path %>
